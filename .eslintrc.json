{
  "env": {
    "es2021": true,
    "node": true
  },
  "plugins": [
    "functional"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:functional/external-recommended",
    "plugin:functional/recommended",
    "plugin:functional/stylistic"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "functional/no-expression-statement":
    // "off"
    [
      "warn",
      {
        "ignorePattern": [
          "console",
          "assert"
        ]
      }
    ]
  }
}